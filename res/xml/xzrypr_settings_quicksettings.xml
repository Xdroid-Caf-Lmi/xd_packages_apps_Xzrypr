<PreferenceScreen
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:title=" "
     xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <Preference
        android:layout="@layout/xd_action_bar"
        android:title="@string/quicksettings_title"
        android:selectable="false"/>

     <com.xd.support.preferences.CustomSystemSeekBarPreference
          android:key="qs_rows_portrait"
          android:title="@string/qs_rows_portrait_title"
          android:max="5"
          android:min="1"
          android:defaultValue="3"
          settings:units="" />

     <com.xd.support.preferences.CustomSystemSeekBarPreference
          android:key="qs_rows_landscape"
          android:title="@string/qs_rows_landscape_title"
          android:max="5"
          android:min="1"
          android:defaultValue="1"
          settings:units="" />

     <com.xd.support.preferences.CustomSystemSeekBarPreference
          android:key="qs_columns_portrait"
          android:title="@string/qs_columns_portrait_title"
          android:max="7"
          android:min="1"
          android:defaultValue="4"
          settings:units="" />

     <com.xd.support.preferences.CustomSystemSeekBarPreference
          android:key="qs_columns_landscape"
          android:title="@string/qs_columns_landscape_title"
          android:max="9"
          android:min="1"
          android:defaultValue="4"
          settings:units="" />

     <com.xzrypr.settings.preferences.SystemSettingSwitchPreference
        android:key="qs_tile_title_visibility"
        android:title="@string/qs_tile_title_visibility_title"
        android:defaultValue="true" />

     <com.xzrypr.settings.preferences.SystemSettingSwitchPreference
          android:key="artwork_media_background"
          android:title="@string/artwork_media_background_title"
          android:summary="@string/artwork_media_background_summary"
          android:defaultValue="false" />

     <!-- QS media player -->
     <com.xzrypr.settings.preferences.SystemSettingSwitchPreference
         android:key="qs_media_player"
         android:title="@string/qs_media_player_title"
         android:summaryOn="@string/qs_media_player_summary_on"
         android:summaryOff="@string/qs_media_player_summary_off"
         android:defaultValue="true" />

</PreferenceScreen>